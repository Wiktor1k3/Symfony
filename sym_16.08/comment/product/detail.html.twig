{% extends 'base.html.twig' %}

{% block title %}{{ product.name }}{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/assets/css/detail.css') }}">

{% endblock %}

{% block body %}
    <div class="container">
        <div class="row mt-3 mb-4">
            <div class="col-md-4">
                <img src="https://via.placeholder.com/600x400" alt="{{ product.name }}" class="img-fluid">
            </div>
            <div class="col-md-8">
                <h1 class="mt-4 mt-md-0">{{ product.name }}</h1>
                <h2>{{ product.price }} €</h2>
                <hr>
                <b>Description: </b>{{ product.description }}
            </div>
        </div>

        <div class="comments_add">
            <div class="comment">

                <div class="comment-meta_add">
                    <h2>Dodaj komentarz</h2>
                </div>

                <div class="comment-content">
                    {{ form_start(commentForm) }}

                    <div class="form_group">
                        <div class="">
                            {{ form_row(commentForm.comment, {'attr': {'class': 'form-control'}, 'label':false}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-8 col-md-offset-4" style="margin-top:5px;">
                            <button type="submit" class="btn btn-primary">
                                <i class="fa fa-btn fa-user"></i> Dodaj komentarz
                            </button>
                        </div>
                    </div>
                    {{ form_end(commentForm) }}
                </div>
            </div>
        </div>

        <div class="comments">
            <header class="header"><h2>Komentarze</h2></header>
        {% if comments is not defined %}
            <p>Brak komentarzy do wyświetlenia.</p>
        {% else %}
                {% for comment in comments %}
                    <div class="comment">

                        <div class="comment-meta">
                        {{ comment.user.email }}
                        </div>

                        <div class="comment-content">
                        {{ comment.comment }}
                        </div>
                    </div>
                {% endfor %}
        {% endif %}
        </div>




{% endblock %}

